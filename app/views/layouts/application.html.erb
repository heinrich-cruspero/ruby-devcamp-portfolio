<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- will include appliction.css in stylesheets dir -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= render 'shared/nav' %>
    <br>
    <%= login_helper %>

    <%= yield %>

    <% if session[:source] %>
      <p>Thank for visting me from <%= session[:source] %></p>
    <% end %>

  </body>
</html>
